
<h1 class="align-content-center" id="Home">Listado De Historias</h1>
<div class="container">
	@if(TempData["SuccessMessage"] != null)
		{
			<div class="alert alert-success">
				@TempData["SuccessMessage"]
			</div>
		} 
	<table class="table">
  <thead>
	<tr>
	  <th scope="col">Id</th>
	  <th scope="col">Fecha Registro</th>
	  <th scope="col">Nombre Mascota</th>
	  <th scope="col">Sexo</th>
	  <th scope="col">Especie</th>
	  <th scope="col">Raza</th>
	  <th scope="col">Tamaño</th>
	  <th scope="col">Datos Extra</th>
	  <th scope="col">Nombre Dueño</th>
	  <th scope="col">Direccion</th>
	  <th scope="col">Teléfono</th>
	  <th scope="col">Email</th>
	</tr>
  </thead>
  <tbody>
	  @foreach(var item in Model)
		{
	<tr>
	  
	  <th scope="row">@item.Id</th>
	  <td>@item.FechaRegistro.ToString("d")</td>
	  <td>@item.NombreMascota</td>
	  <td>@item.FechaNacimiento.ToString("d")</td>
	  <td>@item.Sexo</td>
	  <td>@item.Especie</td>
	  <td>@item.Raza</td>
	  <td>@item.Tamaño</td>
	  <td>@item.DatosParticulares</td>
	  <td>@item.NombreDueno</td>
	  <td>@item.DireccionDueno</td>
	  <td>@item.Telefono</td>
	  <td>@item.Email</td>
	   
	</tr>
	}
  </tbody>
</table>
</div>


<div class="container mt-5">
	@if (User.Identity.IsAuthenticated)
	{
	<form action="/home/Create" method="post">              
			  <div class="row">
				  <div class="form-group">
					<label for="fecha">Fecha de Registro</label>
					<input type="date" class="form-control" name="FechaRegistro" id="FechaRegistro"    required="required">
					@Html.ValidationMessage("FechaRegistro")

				  </div> 
				<div class="col-md-3"> 
				  <div class="form-group">
					<label for="nombre">Nombre Mascota</label>
					<input type="text" class="form-control" id="NombreMascota" name="NombreMascota" placeholder="Nombre de mascota" required="required">
				  </div>
				</div>
				<div class="col-md-9"> 
				  <div class="form-group">
					<label for="fecha">Fecha de Nacimiento</label>
					<input type="date" class="form-control" name="FechaNacimiento" id="FechaNacimiento"    required="required">
					@Html.ValidationMessage("FechaNacimineto")
					
				  </div> 
				</div>    
			  </div>    
			  <div class="row">
				<div class="col-md-3"> 
				  <div class="form-group">
					<label for="categoria">Sexo</label>
					<select class="form-control" name="Sexo" id="Sexo">
					  <option value="Masculino">Masculino</option>
					  <option value="Femenino">Femenino</option>	
					</select>
					
				  </div>
				</div>

				<div class="col-md-3"> 
				  <div class="form-group">
					<label for="estatus">Especie</label>
					<select class="form-control" name="Especie" id="Especie">
					  <option value="Canino">Canino</option>
					  <option value="Felino">Felino</option>	
					</select>
					
				  </div>
				</div>
				<div class="col-md-3"> 
				  <div class="form-group">
					<label for="fecha">Raza</label>
					<select class="form-control" name="Raza" id="Raza">
					  <option value="Dalmata">Dalmata</option>
					  <option value="Aleman">Aleman</option>	
					  <option value="Pitbul">Pitbul</option>	
					</select>
				  </div>  
				</div>
				<div class="col-md-3"> 
				  <div class="form-group">
					<label class="" for="Tamaño">Tamaño</label><br>
					<input type="text" class="form-control" id="Tamaño" name="Tamaño" placeholder="tamaño" required="required">
									  
				</div>
			  </div>    
			  <div class="row">
				  </div>
				  <div class="form-group">
					 <label class="" for="NombreDueno">Nombre Dueño</label>
					<input class="form-control" type="text" name="NombreDueno" id="NombreDueno" required="required" >
					
				  </div>
				<div class="col-md-3"> 
				  <div class="form-group">
					<label for="salario">Dirección</label>
					<input type="text" class="form-control" name="DireccionDueno" id="DireccionDueno" placeholder="Direccion Dueno." required="required">
					
				  </div>
				</div>
				<div class="col-md-3"> 
				  <div class="form-group">
					<label for="Telefono">Telefono</label>
					<input type="text" class="form-control" name="Telefono" id="Telefono" required="required">
			
				  </div>
				</div>
				<div class="col-md-3"> 
				  <div class="form-group">
					<label for="Email">Email</label>
					<input type="email" class="form-control" name="Email" id="Email" placeholder="Ingrese su correo">
				  </div>
				</div>
			  </div> 
			  <hr>
			  <div class="row">
				<div class="col-md-9"> 
				  <div class="form-group">
					<label for="detalles"><strong>Datos Particulares</strong></label>          
					<textarea class="form-control" name="DatosParticulares" id="DatosParticulares" rows="7"></textarea>
				  </div> 
				</div> 
			  </div> 
			  <button type="submit" class="btn btn-primary mt-2">Guardar</button>  
			</form>
			}
			else{
				<div class="p-3 mb-2 alert alert-danger">Debe inciar sesión para poder postular</div>
		}
</div>